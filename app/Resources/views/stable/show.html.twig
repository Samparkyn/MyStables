{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stable</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stable.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stable.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ stable.location }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ stable.capacity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('stable_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('stable_edit', { 'id': stable.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
